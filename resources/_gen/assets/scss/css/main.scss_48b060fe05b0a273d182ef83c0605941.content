html{font-size:62.5%}html,body{margin:0;padding:0;height:100%}body{display:grid;grid-template-rows:auto 1fr 64px;background:url(https://andy.azureedge.net/assets/page-background-635783262300817767.png)50%;font-family:Muli,sans-serif;color:#333}nav .inner,main .inner,footer .inner{margin:15px;max-width:900px;box-sizing:border-box}@media(min-width:930px){nav .inner,main .inner,footer .inner{margin:15px auto}}nav{background:#000;box-shadow:0 4px 4px 0 rgba(0,0,0,.5)}nav .inner{display:flex;justify-content:space-between;align-items:center}nav .inner ul{margin:0;padding:0;list-style:none}nav .inner ul li{display:inline-block;margin:0 12px 0 0;padding-left:18px;background:url(data:image/svg+xml;utf8;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCA2IDYiPjxzdHlsZT4uc3Qwe2ZpbGw6I2JmZDllNX08L3N0eWxlPjxwYXRoIGNsYXNzPSJzdDAiIGQ9Ik0wIDBoNnY2SDB6Ii8+PC9zdmc+)0 no-repeat;background-size:6px}nav .inner ul li:first-child{background:0 0;padding-left:0}nav .inner ul li a{color:#fff;font-size:1.2rem;text-decoration:none;text-transform:uppercase;letter-spacing:2px}nav .inner ul li a:first-letter{font-size:1.3em}nav .inner ul li a:hover,nav .inner ul li a.selected{color:#bfd9e5}main .inner{padding:15px;background:rgba(255,255,255,.8);border-radius:10px;font-size:1.7rem}main .inner header{display:grid;grid-template-columns:1fr auto;grid-gap:15px;margin-bottom:15px}main .inner header h1,main .inner header h2{margin:0 0 10px;font-weight:400;text-shadow:2px 2px 5px #999}main .inner header h1{font-family:atomic age,serif;font-size:3.5rem}main .inner header h2{font-size:1.2em}main .inner header hr{border:0;height:1px;background-color:#bfd9e5;margin:20px 0}main .inner header img{width:70px;height:70px;border-radius:10px}@media(min-width:480px){main .inner header img{width:140px;height:140px}}